{
  "name": "pahina",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://git-codecommit.ap-southeast-1.amazonaws.com/v1/repos/pahina",
  "author": "MJ Abadilla <mjmaix@gmail.com>",
  "license": "unlicensed",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/aws-amplify-react",
      "**/aws-amplify-react/**"
    ]
  },
  "scripts": {
    "postinstall": "patch-package",
    "app:start": "yarn workspace @pahina/app expo:start --clear",
    "web:start": "yarn workspace @pahina/web start",
    "core:build": "yarn clean:all && yarn && yarn workspace @pahina/core build",
    "clean:haste": "rm -rf /tmp/metro-bundler-cache-* /tmp/haste-map-react-native-packer-*",
    "clean:node": "rm -r node_modules; for d in packages/*/node_modules; do echo $d; rm -r $d; done",
    "clean:all": "yarn clean:node && yarn clean:haste"
  },
  "devDependencies": {
    "patch-package": "6.1.2",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.2"
  }
}
