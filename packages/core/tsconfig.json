{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "esnext",
    "paths": { "*": ["types/*"] },
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["esnext"],
    "sourceRoot": "src",
    "sourceMap": true,
    "allowJs": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "coverage/",
    "dist",
    "dist/*"
  ]
}
