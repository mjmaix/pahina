{
  "name": "@pahina/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently 'yarn sync-shared:watch' 'react-scripts start'",
    "prebuild": "yarn sync-shared",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rm -rf node_modules",
    "sync-shared:watch": "yarn sync-shared -w",
    "sync-shared": "ts-node --project ./scripts/sync-shared/tsconfig.json ./scripts/sync-shared"
  },
  "dependencies": {
    "apollo-client": "^2.6.3",
    "aws-amplify-react": "^2.3.9",
    "aws-appsync": "^1.8.1",
    "bootstrap": "^4.3.1",
    "emotion": "^10.0.9",
    "graphql-tag": "^2.10.1",
    "is-hotkey": "^0.1.4",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "reactstrap": "^8.0.0",
    "slate": "^0.47.4",
    "slate-plain-serializer": "^0.7.6",
    "slate-react": "^0.22.4",
    "unstated": "^2.1.1",
    "utility-types": "^3.7.0",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/is-hotkey": "^0.1.1",
    "@types/jest": "24.0.15",
    "@types/lodash": "^4.14.135",
    "@types/moment": "^2.13.0",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "@types/reactstrap": "^8.0.1",
    "@types/slate": "^0.44.12",
    "@types/slate-plain-serializer": "^0.6.1",
    "@types/slate-react": "^0.22.1",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.18",
    "concurrently": "^4.1.1",
    "react-scripts": "3.0.1",
    "sync-folders": "^2.0.0",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "workspaces": {
    "nohoist": [
      "**/aws-amplify-react",
      "**/aws-amplify-react/**",
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/reactstrap",
      "**/reactstrap/**"
    ]
  }
}
